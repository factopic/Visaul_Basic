Validation

Email 

  Private Sub EmailTextBox_LostFocus(ByVal sender As Object, ByVal e As System.EventArgs) Handles EmailTextBox.LostFocus
        Dim regex As Regex = New Regex("^([\w-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$")
        Dim isValid As Boolean = regex.IsMatch(EmailTextBox.Text.Trim)
        If Not isValid Then
            MessageBox.Show("Invalid Email.")
        End If
    End Sub
-------------------------------------------------------------------------------------
Pincode 

    Private Sub TextBox6_Leave(ByVal sender As Object, ByVal e As System.EventArgs) Handles TextBox6.Leave
        Dim digitsOnly As Regex = New Regex("[^\d]")
        TextBox6.MaxLength = 6
        Dim isValid = digitsOnly.IsMatch(TextBox6.Text)
        If isValid Then
            MsgBox("invalid")
        End If
    End Sub
