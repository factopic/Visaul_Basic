Pincode 

    Private Sub TextBox6_Leave(ByVal sender As Object, ByVal e As System.EventArgs) Handles TextBox6.Leave
        Dim digitsOnly As Regex = New Regex("[^\d]")
        TextBox6.MaxLength = 6
        Dim isValid = digitsOnly.IsMatch(TextBox6.Text)
        If isValid Then
            MsgBox("invalid")
        End If
    End Sub
