fstream file;
char buffer[80];



class Shopping
{
	 public:
		  char key[5],category[30],prodName[15],brand[10],price[12],tax[16],weight[16];
		  void initial();
		  void read();
		  void store(int);
		  int remove(int,char *);
		  int hash(char *);
		  void displayall();
		  void retrieve(int addr,char k[]);
 };



int Shopping::hash(char* key)
{
	int i=0,sum=0;
	while(key[i]!='\0')
	{
		sum=sum+(key[i]-48);
		i++;
	}
	return sum % max;
}

